#! /bin/sh
options="-version -cc -cppflags -cflags -ldflags -cxx -cxxflags -libs"
if [ "$#" -eq 0 -o "$1" = '-h' -o "$1" = -help ]; then
  echo "usage: $0 OPT..."
  echo "  where OPT is one or more from the following list:"
  echo "$options" -all
  exit 1
fi
for arg in "$@"; do
  case  "$arg" in
    -version)
      echo "genometools 1.6.2 (Linux) "2023-03-06 16:39:51""
      ;;
    -cc)
      echo 'CC="cc"'
      ;;
    -cppflags)
      echo 'CPPFLAGS="-I\"./build/include\"  -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64 -DHAVE_MEMMOVE -D_LARGEFILE64_SOURCE=1 -DHAVE_HIDDEN -DLUA_DL_DLOPEN -DLUA_USE_MKSTEMP -DWITHOUT_CAIRO -DGT_THREADS_ENABLED -DSQLITE_THREADSAFE=0 -DHAVE_SQLITE"'
      ;;
    -cflags)
      echo 'CFLAGS=""'
      ;;
    -cxx)
      echo 'CXX="g++"'
      ;;
    -cxxflags)
      echo 'CXXFLAGS=""'
      ;;
    -ldflags)
      echo 'LDFLAGS="-L./build/lib  -L/usr/local/lib"'
      ;;
    -libs)
      echo 'LIBS=" -lm  -ldl -lpthread -lpthread -ldl"'
      ;;
    -all)
      exec $0 $options
      ;;
    *)
      echo "Invalid argument: $arg"
      ;;
  esac
done